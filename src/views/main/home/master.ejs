<div class="container-fluid">
    <div class="row content">
        <!-- include('sections/leftSidenav'); -->
        <div class="col-sm-3 sidenav no-padding">
            <div class="left">
                <div class="top form-group">
                    <select class="form-control" id="select-type-chat">
                        <option value="all-chat">Toàn bộ trò chuyện</option>
                        <option value="personal-chat">Trò chuyện cá nhân</option>
                        <option value="group-chat">Trò chuyện nhóm</option>
                    </select>
                    <a href="#groupChatModal" class="create-group-chat" data-toggle="modal"
                       title="Tạo một nhóm trò chuyện mới"></a>
                </div>
                <ul class="people no-padding-start">
                    <a href="#uidcontact._id" class="room-chat">
                        <li class="person" data-chat="contact._id">
                            <div class="left-avatar">
                                <div class="dot"></div>
                                <img src="images/users/default-avatar-trungquandev-01.jpg" alt="">
                            </div>
                            <span class="name">
                                    Trung Quân
                                </span>
                            <span class="time">Một phút trước</span>
                            <span class="preview">Xin chào</span>
                        </li>
                    </a>
                    <a href="#uidgroupChatItem._id" class="room-chat">
                        <li class="person group-chat" data-chat="groupChatItem._id">
                            <div class="left-avatar">
                                <!-- <div class="dot"></div> -->
                                <img src="images/users/group-avatar-trungquandev.png" alt="">
                            </div>
                            <span class="name">
                                    <span class="group-chat-name">Group:</span> Group Chat
                                </span>
                            <span class="time">Hai giờ trước</span>
                            <span class="preview">Chào cả nhóm</span>
                        </li>
                    </a>
                    <a href="#" class="room-chat" id="null-contact">
                        <li class="person active" data-chat="person-default">
                            <div class="left-avatar">
                                <div class="dot online"></div>
                                <img class="avatar-online" src="images/users/default-avatar-trungquandev-02.jpg" alt="">
                            </div>
                            <span class="name">Trung Quân (admin)</span>
                            <span class="time">Bây giờ</span>
                            <span class="preview">Xin chào <strong>Trung Quân</strong>...</span>
                        </li>
                    </a>
                </ul>
            </div>
        </div>

        <!-- include('sections/rightSidenav'); -->
        <div class="col-sm-9 sidenav no-padding">
            <div class="right" data-chat="">
                <div class="top">
                    <span>To: <span class="name">Trung Quân (admin)</span></span>
                    <span class="chat-menu-right">
                            <a href="#attachsModal" id="show-attachs" data-toggle="modal">
                                Tệp đính kèm
                                <i class="fa fa-paperclip"></i>
                            </a>
                        </span>
                    <span class="chat-menu-right">
                            <a href="javascript:void(0)">&nbsp;</a>
                        </span>
                    <span class="chat-menu-right">
                            <a href="#imagesModal" id="show-images" data-toggle="modal">
                                Hình ảnh
                                <i class="fa fa-photo"></i>
                            </a>
                        </span>
                </div>
                <div class="content-chat">
                    <div class="chat" data-chat="">
                        <div class="bubble me" data-mess-id="${item._id}">Hello, I'm Trung Quan, author of
                            https://trungquandev.com
                        </div>
                        <div class="bubble you" data-mess-id="${item._id}">Really? I'm Trung Quan too, author of
                            https://trungquandev.com, are you fake?
                        </div>
                        <div class="bubble me" data-mess-id="${item._id}">This is me !!!</div>
                        <div class="bubble me bubble-image-file" data-mess-id="${item._id}">
                            <img src="images/users/default-avatar-trungquandev-01.jpg" class="show-image-chat">
                        </div>
                        <div class="bubble me bubble-image-file" data-mess-id="${item._id}">
                            <a href="fileExample/Tệp văn bản - trungquandev.pdf"
                               download="${ item.file.fileName }">
                                Tệp văn bản - trungquandev.pdf
                            </a>
                        </div>
                        <div class="bubble you" data-mess-id="${item._id}">And this is me @@ !!!</div>
                        <div class="bubble you bubble-image-file" data-mess-id="${item._id}">
                            <img src="images/users/default-avatar-trungquandev-02.jpg" class="show-image-chat">
                        </div>
                        <div class="bubble you bubble-image-file" data-mess-id="${item._id}">
                            <a href="fileExample/Tệp văn bản - trungquandev.docx"
                               download="${ item.file.fileName }">
                                Tệp văn bản - trungquandev.docx
                            </a>
                        </div>
                    </div>
                </div>
                <div class="write" data-chat="">
                    <input type="text" class="write-chat" data-chat="17071995">
                    <div class="icons">
                        <a href="#" class="icon-chat" data-chat=""><i class="fa fa-smile-o"></i></a>
                        <label for="image-chat">
                            <input type="file" id="image-chat" name="my-image-chat" class="image-chat" data-chat="">
                            <i class="fa fa-photo"></i>
                        </label>
                        <label for="attach-chat">
                            <input type="file" id="attach-chat" name="my-attach-chat" class="attach-chat" data-chat="">
                            <i class="fa fa-paperclip"></i>
                        </label>
                        <a href="#streamModal" id="video-chat" class="video-chat" data-chat="" data-toggle="modal">
                            <i class="fa fa-video-camera"></i>
                        </a>
                        <input type="hidden" id="peer-id" value="">
                    </div>
                </div>
            </div>

